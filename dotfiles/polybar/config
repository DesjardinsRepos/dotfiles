[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
;offset-x = 15
;offset-y = 15
;radius = 5
fixed-center = true

background = #aa2e2e2e
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

;border-left-size = 15
;border-right-size = 15

border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=10;1
;font-1 = unifont:fontformat=truetype:size=10:antialias=false;0
font-1 = siji;1
font-2 = "Font Awesome 5 Brands,Font Awesome 5 Brands Regular:pixelsize=10";1
font-3 = "Font Awesome 5 Free,Font Awesome 5 Free Solid:style=Solid:pixelsize=10";1

modules-left = i3 xwindow
modules-center = date
modules-right = spotify volTv volMain volPc volBt powermenu

tray-position = right
tray-padding = 2

;wm-restack = i3
;override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
